{
  "manifest_version": 2,
  "name": "D&D Beyond Character Export",
  "version": "0.1",
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "Export Sheet"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.dndbeyond.com/profile/*/characters/*"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [ "declarativeContent", "tabs", "activeTab", "storage" ]
}
